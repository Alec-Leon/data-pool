<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>{{ title }} · Cyberpunk RED DB</title>
    <link rel="stylesheet" href="{{ '/css/main.css' | url }}">
    <script src="https://unpkg.com/lunr/lunr.js"></script>
    <script src="https://unpkg.com/lunr/lunr.min.js"></script>
    <script src="https://unpkg.com/lunr-languages/lunr.stemmer.support.js"></script>
    <script src="https://unpkg.com/lunr-languages/lunr.ru.js"></script>
    <script>window.__BASE_PATH__ = "{{ '/' | url }}";</script>
</head>
<body>
<header class="site-header">
    <img src="{{ '/images/data-pool_header.png' | url }}" alt="Data Pool Header">
</header>

<div class="layout">
    <div class="search-box">
        <input
                type="text"
                id="search-input"
                placeholder="Поиск по датапулу..."
                autocomplete="off"
        />
        <ul id="search-results"></ul>
    </div>
    {% include "sidebar.njk" %}
    <main class="content">
        {{ content | safe }}
    </main>
</div>
<script src="{{ '/app/search.js' | url }}"></script>
</body>
</html>

